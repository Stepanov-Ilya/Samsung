        android:textSize="18sp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/day4WeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/day5WeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/day6WeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/day7WeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"/>


</LinearLayout>